{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*",
    "**/*.spec.ts",
    ".mocharc.cjs",
    "eslint.config.mjs",
    "rollup.config.ts"
  ],
  "exclude": ["node_modules", "/lib", "tmp", "fixtures"]
}
