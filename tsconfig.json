{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*", "**/*.spec.ts", "rollup.config.ts"],
  "exclude": ["node_modules", "/lib", "tmp", "fixtures"]
}
