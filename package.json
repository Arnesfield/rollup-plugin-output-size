{
  "name": "rollup-plugin-output-size",
  "version": "1.1.0",
  "description": "A Rollup plugin that displays output bundle sizes.",
  "keywords": [
    "rollup-plugin",
    "output-size",
    "summary",
    "output",
    "size",
    "gzip"
  ],
  "homepage": "https://github.com/Arnesfield/rollup-plugin-output-size#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/rollup-plugin-output-size/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/rollup-plugin-output-size.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs",
    "default": "./lib/index.mjs"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "lint": "eslint . --ext .js,.ts",
    "lint:strict": "npm run lint -- --max-warnings 0",
    "start": "npm run build -- -w --no-watch.clearScreen",
    "test": "concurrently -r --kill-others-on-fail npm:test:mocha npm:lint:strict \"tsc --skipLibCheck\"",
    "test:mocha": "mocha -r tsx **/*.spec.ts",
    "test:watch": "npm run test:mocha -- --watch --watch-files src,test"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "gzip-size": "^7.0.0",
    "pretty-bytes": "^6.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/rimraf": "^3.0.2",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "chai": "^4.3.7",
    "concurrently": "^8.1.0",
    "eslint": "^8.42.0",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "sinon": "^15.1.0",
    "strip-ansi": "^7.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "rollup": "^2.0.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.16.0"
  }
}
